

  <% if current_user.already_favorites?(micropost) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      
      <%= button_tag( class: "btn btn-warning col-md-3") do %>
        <%= content_tag :span, "お気に入り解除", class: "glyphicon glyphicon-star" %>
      <% end %>
   
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= button_tag( class: "btn btn-info col-md-3") do %>
        <%= content_tag :span, "お気に入り", class: "glyphicon glyphicon-star-empty" %>
      <% end %>
    <% end %>
  <% end %>




