<% unless current_user == user %>
  <% if current_user following?(user) %> <!==もしふぉろーしていればdeleteメソッドへ==>
    <%= form_for(current_user.followings.find_by(follow_id: user.id), html:{method: :delete}) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block'%>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %> <!==もしフォローしていなければcreateメソッドへ==>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'Follow', class: 'btn btn-primary btnj-block' %>
    <% end %>
  <% end %>
<% end %>